{
  "env": {
    "node": true,
    "es6": true
  },
  "extends": ["airbnb-base"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "eqeqeq": "error",
    "semi": ["off", "never"],
    "comma-dangle": ["error", "always-multiline"],
    "indent": ["warn", 2]
  }
}
